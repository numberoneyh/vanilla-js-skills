# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
indent_style = space
end_of_line = lf
insert_final_newline = true
indent_size = 2
trim_trailing_whitespace = true
charset = utf-8

[*.html]
max_line_length = 120


[*.{js,py}]
charset = utf-8


[*.py]
indent_style = space
indent_size = 4

[*.js]
quote_type = single
max_line_length = 120


[lib/**.js]
indent_style = space
indent_size = 2
quote_type = single

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
